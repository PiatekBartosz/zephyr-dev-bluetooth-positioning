{
    "name": "Zephyr RTOS Dev Environment",
    "dockerComposeFile": [
        "../docker-compose.yaml"
    ],
    "service": "zephyr-dev-bluetooth-positioning",
    "remoteUser": "dev",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "C_Cpp.default.intelliSenseMode": "linux-gcc-arm",
                "C_Cpp.default.compilerPath": "/opt/zephyr-sdk/arm-zephyr-eabi/bin/arm-zephyr-eabi-gcc",
                "cmake.configureOnOpen": true,
                "cmake.generator": "Ninja",
                "cmake.environment": {
                    "ZEPHYR_BASE": "/opt/zephyr/zephyr",
                    "ZEPHYR_TOOLCHAIN_VARIANT": "zephyr",
                    "ZEPHYR_SDK_INSTALL_DIR": "/opt/zephyr-sdk"
                },
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "twxs.cmake",
                "ms-vscode.cmake-tools",
                "marus25.cortex-debug",
                "cschlosser.doxdocgen",
                "eamodio.gitlens",
                "mhutchie.git-graph",
                "redhat.vscode-devicetree"
            ],
        }
    },
    "userEnvProbe": "loginInteractiveShell"
}